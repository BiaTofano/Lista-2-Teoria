 #include <stdio.h> 
 #include <stdlib.h>
  
int main() { 
    float temperatura; 
  
    do { 
        printf("Digite a temperatura atual (em °C): "); 
        scanf("%f", &temperatura); 
  
        if (temperatura < 20.0 || temperatura > 25.0) { 
            printf("ALERTA: Temperatura fora do intervalo seguro (20°C a 25°C)!\n"); 
        } else { 
            printf("Temperatura dentro do intervalo seguro.\n"); 
        } 
  
    } while (temperatura < 20.0 || temperatura > 25.0); 
  
    printf("Monitoramento encerrado. Temperatura estabilizada.\n"); 
    return 0; 
}
